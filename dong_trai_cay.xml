<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:padding="10dp" />

    <TextView

        android:id="@+id/textviewTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewHinh"
        android:text="Tên"
        android:textColor="#ff00"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTen"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:text="Mô tả"
        android:textColor="#00FF2A"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textQuocGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMoTa"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:text="Quốc Gia"
        android:textColor="#090909"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textNgheDanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMoTa"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/imageviewHinh"
        android:text="Nghệ Danh"
        android:textColor="#FF003C"
        android:textSize="22sp" />
</RelativeLayout>